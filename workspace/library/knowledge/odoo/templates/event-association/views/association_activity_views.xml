<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Activity Form View -->
    <record id="view_association_activity_form" model="ir.ui.view">
        <field name="name">association.activity.form</field>
        <field name="model">association.activity</field>
        <field name="arch" type="xml">
            <form string="Activity">
                <header>
                    <button name="action_open" type="object" string="Open Registration"
                            class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_start" type="object" string="Start"
                            class="oe_highlight" invisible="state != 'open'"/>
                    <button name="action_done" type="object" string="Complete"
                            class="oe_highlight" invisible="state != 'ongoing'"/>
                    <button name="action_cancel" type="object" string="Cancel"
                            invisible="state in ('done', 'cancelled')"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,open,ongoing,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_participants" type="object"
                                class="oe_stat_button" icon="fa-users">
                            <field name="participant_count" widget="statinfo"
                                   string="Participants"/>
                        </button>
                        <button name="action_open_sessions" type="object"
                                class="oe_stat_button" icon="fa-calendar-check-o">
                            <field name="session_count" widget="statinfo"
                                   string="Sessions"/>
                        </button>
                    </div>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" placeholder="Activity Name"/></h1>
                        <field name="code" readonly="1"/>
                    </div>
                    <group>
                        <group string="Activity Details">
                            <field name="activity_type_id"/>
                            <field name="level"/>
                            <field name="age_group"/>
                            <field name="instructor_id"/>
                        </group>
                        <group string="Schedule">
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="recurrence"/>
                            <field name="day_of_week" invisible="recurrence == 'none'"
                                   widget="many2many_tags"/>
                            <field name="time_start" widget="float_time"/>
                            <field name="time_end" widget="float_time"/>
                        </group>
                    </group>
                    <group>
                        <group string="Location">
                            <field name="venue_id"/>
                            <field name="room"/>
                        </group>
                        <group string="Capacity &amp; Pricing">
                            <field name="capacity_min"/>
                            <field name="capacity_max"/>
                            <field name="seats_available"/>
                            <field name="price_member"/>
                            <field name="price_non_member"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description"/>
                        </page>
                        <page string="Participants" name="participants">
                            <field name="participation_ids">
                                <tree editable="bottom">
                                    <field name="member_id"/>
                                    <field name="enrollment_date"/>
                                    <field name="payment_state"/>
                                    <field name="attendance_rate" widget="progressbar"/>
                                    <field name="state" widget="badge"
                                           decoration-info="state == 'enrolled'"
                                           decoration-success="state == 'active'"
                                           decoration-danger="state == 'dropped'"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Sessions" name="sessions">
                            <button name="action_generate_sessions" type="object"
                                    string="Generate Sessions" class="btn-primary mb-3"
                                    icon="fa-calendar-plus-o"/>
                            <field name="session_ids">
                                <tree>
                                    <field name="date"/>
                                    <field name="time_start" widget="float_time"/>
                                    <field name="time_end" widget="float_time"/>
                                    <field name="present_count"/>
                                    <field name="absent_count"/>
                                    <field name="state" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Requirements" name="requirements">
                            <group>
                                <field name="equipment_needed"/>
                                <field name="prerequisites"/>
                            </group>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Activity Tree View -->
    <record id="view_association_activity_tree" model="ir.ui.view">
        <field name="name">association.activity.tree</field>
        <field name="model">association.activity</field>
        <field name="arch" type="xml">
            <tree string="Activities" decoration-muted="state == 'cancelled'">
                <field name="code"/>
                <field name="name"/>
                <field name="activity_type_id"/>
                <field name="instructor_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="recurrence"/>
                <field name="participant_count"/>
                <field name="capacity_max"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-primary="state == 'open'"
                       decoration-warning="state == 'ongoing'"
                       decoration-success="state == 'done'"/>
            </tree>
        </field>
    </record>

    <!-- Activity Calendar View -->
    <record id="view_association_activity_calendar" model="ir.ui.view">
        <field name="name">association.activity.calendar</field>
        <field name="model">association.activity</field>
        <field name="arch" type="xml">
            <calendar string="Activities" date_start="date_start" date_stop="date_end"
                      color="activity_type_id" mode="month">
                <field name="name"/>
                <field name="instructor_id"/>
                <field name="venue_id"/>
            </calendar>
        </field>
    </record>

    <!-- Activity Kanban View -->
    <record id="view_association_activity_kanban" model="ir.ui.view">
        <field name="name">association.activity.kanban</field>
        <field name="model">association.activity</field>
        <field name="arch" type="xml">
            <kanban default_group_by="activity_type_id">
                <field name="name"/>
                <field name="image"/>
                <field name="instructor_id"/>
                <field name="participant_count"/>
                <field name="capacity_max"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('association.activity', 'image', record.id.raw_value)"
                                     alt="Activity" class="o_image_64_cover"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div t-if="record.instructor_id.value">
                                    <i class="fa fa-user"/> <field name="instructor_id"/>
                                </div>
                                <div class="mt-1">
                                    <span class="badge text-bg-secondary">
                                        <field name="participant_count"/>/<field name="capacity_max"/>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Activity Search View -->
    <record id="view_association_activity_search" model="ir.ui.view">
        <field name="name">association.activity.search</field>
        <field name="model">association.activity</field>
        <field name="arch" type="xml">
            <search string="Search Activities">
                <field name="name"/>
                <field name="activity_type_id"/>
                <field name="instructor_id"/>
                <separator/>
                <filter name="filter_active" string="Active"
                        domain="[('state', 'in', ('open', 'ongoing'))]"/>
                <filter name="filter_upcoming" string="Upcoming"
                        domain="[('date_start', '>=', context_today().strftime('%%Y-%%m-%%d'))]"/>
                <filter name="filter_available" string="Has Seats"
                        domain="[('seats_available', '>', 0)]"/>
                <group expand="0" string="Group By">
                    <filter name="groupby_type" string="Activity Type"
                            context="{'group_by': 'activity_type_id'}"/>
                    <filter name="groupby_instructor" string="Instructor"
                            context="{'group_by': 'instructor_id'}"/>
                    <filter name="groupby_state" string="Status"
                            context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Activity Type Tree View -->
    <record id="view_association_activity_type_tree" model="ir.ui.view">
        <field name="name">association.activity.type.tree</field>
        <field name="model">association.activity.type</field>
        <field name="arch" type="xml">
            <tree string="Activity Types" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
                <field name="category"/>
                <field name="color" widget="color_picker"/>
            </tree>
        </field>
    </record>

    <!-- Activity Session Form View -->
    <record id="view_association_activity_session_form" model="ir.ui.view">
        <field name="name">association.activity.session.form</field>
        <field name="model">association.activity.session</field>
        <field name="arch" type="xml">
            <form string="Session">
                <header>
                    <button name="action_take_attendance" type="object" string="Take Attendance"
                            class="oe_highlight" invisible="state != 'scheduled'"/>
                    <button name="action_complete" type="object" string="Complete"
                            class="oe_highlight" invisible="state != 'done'"/>
                    <button name="action_cancel" type="object" string="Cancel"
                            invisible="state in ('done', 'cancelled')"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="activity_id"/>
                            <field name="date"/>
                            <field name="time_start" widget="float_time"/>
                            <field name="time_end" widget="float_time"/>
                        </group>
                        <group>
                            <field name="instructor_id"/>
                            <field name="substitute_instructor_id"/>
                            <field name="venue_id"/>
                            <field name="room"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Attendance" name="attendance">
                            <field name="attendance_ids">
                                <tree editable="bottom">
                                    <field name="member_id"/>
                                    <field name="status" widget="radio"
                                           options="{'horizontal': true}"/>
                                    <field name="notes"/>
                                </tree>
                            </field>
                            <group>
                                <group>
                                    <field name="present_count"/>
                                </group>
                                <group>
                                    <field name="absent_count"/>
                                </group>
                            </group>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Activity Session Tree View -->
    <record id="view_association_activity_session_tree" model="ir.ui.view">
        <field name="name">association.activity.session.tree</field>
        <field name="model">association.activity.session</field>
        <field name="arch" type="xml">
            <tree string="Sessions">
                <field name="activity_id"/>
                <field name="date"/>
                <field name="time_start" widget="float_time"/>
                <field name="time_end" widget="float_time"/>
                <field name="instructor_id"/>
                <field name="present_count"/>
                <field name="absent_count"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'scheduled'"
                       decoration-success="state == 'done'"/>
            </tree>
        </field>
    </record>

    <!-- Activity Session Calendar View -->
    <record id="view_association_activity_session_calendar" model="ir.ui.view">
        <field name="name">association.activity.session.calendar</field>
        <field name="model">association.activity.session</field>
        <field name="arch" type="xml">
            <calendar string="Sessions" date_start="date" color="activity_id" mode="week">
                <field name="activity_id"/>
                <field name="instructor_id"/>
                <field name="venue_id"/>
            </calendar>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_association_activity" model="ir.actions.act_window">
        <field name="name">Activities</field>
        <field name="res_model">association.activity</field>
        <field name="view_mode">kanban,tree,calendar,form</field>
        <field name="search_view_id" ref="view_association_activity_search"/>
        <field name="context">{'search_default_filter_active': 1}</field>
    </record>

    <record id="action_association_activity_type" model="ir.actions.act_window">
        <field name="name">Activity Types</field>
        <field name="res_model">association.activity.type</field>
        <field name="view_mode">tree</field>
    </record>

    <record id="action_association_activity_session" model="ir.actions.act_window">
        <field name="name">Sessions</field>
        <field name="res_model">association.activity.session</field>
        <field name="view_mode">calendar,tree,form</field>
    </record>
</odoo>
