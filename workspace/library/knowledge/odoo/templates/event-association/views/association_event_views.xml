<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Event Form View -->
    <record id="view_association_event_form" model="ir.ui.view">
        <field name="name">association.event.form</field>
        <field name="model">association.event</field>
        <field name="arch" type="xml">
            <form string="Event">
                <header>
                    <button name="action_publish" type="object" string="Publish"
                            class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_start" type="object" string="Start"
                            class="oe_highlight" invisible="state != 'published'"/>
                    <button name="action_done" type="object" string="Done"
                            class="oe_highlight" invisible="state != 'ongoing'"/>
                    <button name="action_cancel" type="object" string="Cancel"
                            invisible="state in ('done', 'cancelled')"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,published,ongoing,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_registrations" type="object"
                                class="oe_stat_button" icon="fa-users">
                            <field name="registration_count" widget="statinfo"
                                   string="Registrations"/>
                        </button>
                    </div>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" placeholder="Event Name"/></h1>
                        <field name="code" readonly="1"/>
                    </div>
                    <group>
                        <group string="Event Details">
                            <field name="event_type_id"/>
                            <field name="location_type"/>
                            <field name="venue_id" invisible="location_type == 'online'"/>
                            <field name="address" invisible="location_type == 'online'"/>
                            <field name="online_link" invisible="location_type == 'physical'"/>
                        </group>
                        <group string="Schedule">
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="registration_deadline"/>
                        </group>
                    </group>
                    <group>
                        <group string="Capacity">
                            <field name="capacity_min"/>
                            <field name="capacity_max"/>
                            <field name="seats_available"/>
                            <field name="is_full"/>
                        </group>
                        <group string="Pricing">
                            <field name="is_free"/>
                            <field name="price_member" invisible="is_free"/>
                            <field name="price_non_member" invisible="is_free"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <group string="Registration">
                            <field name="member_only"/>
                            <field name="registration_approval"/>
                        </group>
                        <group string="Organization">
                            <field name="organizer_id"/>
                            <field name="responsible_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="short_description" placeholder="Short description for listings..."/>
                            <field name="description"/>
                        </page>
                        <page string="Registrations" name="registrations">
                            <field name="registration_ids">
                                <tree editable="bottom">
                                    <field name="partner_id"/>
                                    <field name="member_id"/>
                                    <field name="registration_date"/>
                                    <field name="guests"/>
                                    <field name="amount"/>
                                    <field name="payment_state"/>
                                    <field name="state" widget="badge"
                                           decoration-info="state == 'draft'"
                                           decoration-warning="state == 'pending'"
                                           decoration-success="state in ('confirmed', 'attended')"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Volunteers" name="volunteers">
                            <field name="volunteer_ids" widget="many2many_tags"/>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Event Tree View -->
    <record id="view_association_event_tree" model="ir.ui.view">
        <field name="name">association.event.tree</field>
        <field name="model">association.event</field>
        <field name="arch" type="xml">
            <tree string="Events" decoration-muted="state == 'cancelled'"
                  decoration-success="state == 'done'">
                <field name="code"/>
                <field name="name"/>
                <field name="event_type_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="venue_id"/>
                <field name="registration_count"/>
                <field name="capacity_max"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-primary="state == 'published'"
                       decoration-warning="state == 'ongoing'"
                       decoration-success="state == 'done'"/>
            </tree>
        </field>
    </record>

    <!-- Event Calendar View -->
    <record id="view_association_event_calendar" model="ir.ui.view">
        <field name="name">association.event.calendar</field>
        <field name="model">association.event</field>
        <field name="arch" type="xml">
            <calendar string="Events" date_start="date_start" date_stop="date_end"
                      color="event_type_id" mode="month" quick_create="0">
                <field name="name"/>
                <field name="event_type_id"/>
                <field name="venue_id"/>
                <field name="registration_count"/>
            </calendar>
        </field>
    </record>

    <!-- Event Kanban View -->
    <record id="view_association_event_kanban" model="ir.ui.view">
        <field name="name">association.event.kanban</field>
        <field name="model">association.event</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="image"/>
                <field name="date_start"/>
                <field name="venue_id"/>
                <field name="registration_count"/>
                <field name="capacity_max"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('association.event', 'image', record.id.raw_value)"
                                     alt="Event" class="o_image_64_cover"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div><i class="fa fa-calendar"/> <field name="date_start"/></div>
                                <div t-if="record.venue_id.value">
                                    <i class="fa fa-map-marker"/> <field name="venue_id"/>
                                </div>
                                <div class="mt-1">
                                    <span class="badge text-bg-info">
                                        <field name="registration_count"/>/<field name="capacity_max"/> registered
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Event Search View -->
    <record id="view_association_event_search" model="ir.ui.view">
        <field name="name">association.event.search</field>
        <field name="model">association.event</field>
        <field name="arch" type="xml">
            <search string="Search Events">
                <field name="name"/>
                <field name="event_type_id"/>
                <field name="venue_id"/>
                <separator/>
                <filter name="filter_upcoming" string="Upcoming"
                        domain="[('date_start', '>=', context_today().strftime('%%Y-%%m-%%d'))]"/>
                <filter name="filter_past" string="Past"
                        domain="[('date_end', '&lt;', context_today().strftime('%%Y-%%m-%%d'))]"/>
                <separator/>
                <filter name="filter_published" string="Published"
                        domain="[('state', '=', 'published')]"/>
                <filter name="filter_free" string="Free Events"
                        domain="[('is_free', '=', True)]"/>
                <group expand="0" string="Group By">
                    <filter name="groupby_type" string="Event Type"
                            context="{'group_by': 'event_type_id'}"/>
                    <filter name="groupby_venue" string="Venue"
                            context="{'group_by': 'venue_id'}"/>
                    <filter name="groupby_month" string="Month"
                            context="{'group_by': 'date_start:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Event Type Tree View -->
    <record id="view_association_event_type_tree" model="ir.ui.view">
        <field name="name">association.event.type.tree</field>
        <field name="model">association.event.type</field>
        <field name="arch" type="xml">
            <tree string="Event Types" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
                <field name="color" widget="color_picker"/>
            </tree>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_association_event" model="ir.actions.act_window">
        <field name="name">Events</field>
        <field name="res_model">association.event</field>
        <field name="view_mode">kanban,calendar,tree,form</field>
        <field name="search_view_id" ref="view_association_event_search"/>
        <field name="context">{'search_default_filter_upcoming': 1}</field>
    </record>

    <record id="action_association_event_type" model="ir.actions.act_window">
        <field name="name">Event Types</field>
        <field name="res_model">association.event.type</field>
        <field name="view_mode">tree</field>
    </record>

    <record id="action_association_venue" model="ir.actions.act_window">
        <field name="name">Venues</field>
        <field name="res_model">association.venue</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
