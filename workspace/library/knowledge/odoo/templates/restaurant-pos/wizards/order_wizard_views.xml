<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Payment Wizard Form -->
    <record id="view_restaurant_order_payment_wizard_form" model="ir.ui.view">
        <field name="name">restaurant.order.payment.wizard.form</field>
        <field name="model">restaurant.order.payment.wizard</field>
        <field name="arch" type="xml">
            <form string="Payment">
                <group>
                    <group>
                        <field name="order_id" readonly="1"/>
                        <field name="amount_due"/>
                        <field name="currency_id" invisible="1"/>
                    </group>
                    <group>
                        <field name="payment_method"/>
                        <field name="amount"/>
                        <field name="tip_amount"/>
                    </group>
                </group>
                <group invisible="payment_method != 'cash'">
                    <group>
                        <field name="tendered"/>
                        <field name="change"/>
                    </group>
                </group>
                <group invisible="payment_method != 'split'">
                    <group>
                        <field name="split_type"/>
                        <field name="split_count" invisible="split_type != 'equal'"/>
                        <field name="split_amount" invisible="split_type != 'equal'"/>
                    </group>
                </group>
                <group>
                    <field name="reference" invisible="payment_method == 'cash'"
                           placeholder="Card transaction reference..."/>
                </group>
                <footer>
                    <button name="action_pay" type="object"
                            string="Process Payment" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_restaurant_order_payment_wizard" model="ir.actions.act_window">
        <field name="name">Payment</field>
        <field name="res_model">restaurant.order.payment.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Table Transfer Wizard Form -->
    <record id="view_restaurant_table_transfer_wizard_form" model="ir.ui.view">
        <field name="name">restaurant.table.transfer.wizard.form</field>
        <field name="model">restaurant.table.transfer.wizard</field>
        <field name="arch" type="xml">
            <form string="Transfer Table">
                <group>
                    <field name="order_id" readonly="1"/>
                    <field name="current_table_id"/>
                    <field name="new_table_id"/>
                </group>
                <footer>
                    <button name="action_transfer" type="object"
                            string="Transfer" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_restaurant_table_transfer_wizard" model="ir.actions.act_window">
        <field name="name">Transfer Table</field>
        <field name="res_model">restaurant.table.transfer.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Merge Orders Wizard Form -->
    <record id="view_restaurant_order_merge_wizard_form" model="ir.ui.view">
        <field name="name">restaurant.order.merge.wizard.form</field>
        <field name="model">restaurant.order.merge.wizard</field>
        <field name="arch" type="xml">
            <form string="Merge Orders">
                <group>
                    <field name="order_ids" widget="many2many_tags"/>
                    <field name="target_order_id" domain="[('id', 'in', order_ids)]"/>
                </group>
                <footer>
                    <button name="action_merge" type="object"
                            string="Merge" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_restaurant_order_merge_wizard" model="ir.actions.act_window">
        <field name="name">Merge Orders</field>
        <field name="res_model">restaurant.order.merge.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_restaurant_order"/>
        <field name="binding_view_types">list</field>
    </record>
</odoo>
