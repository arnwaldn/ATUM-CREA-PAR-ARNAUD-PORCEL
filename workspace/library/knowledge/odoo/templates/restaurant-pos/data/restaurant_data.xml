<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Table Shapes -->
        <record id="shape_square" model="restaurant.table.shape">
            <field name="name">Square</field>
            <field name="code">square</field>
            <field name="icon">fa-square</field>
        </record>
        <record id="shape_round" model="restaurant.table.shape">
            <field name="name">Round</field>
            <field name="code">round</field>
            <field name="icon">fa-circle</field>
        </record>
        <record id="shape_rectangle" model="restaurant.table.shape">
            <field name="name">Rectangle</field>
            <field name="code">rectangle</field>
            <field name="icon">fa-square-o</field>
        </record>

        <!-- Menu Option Types -->
        <record id="option_type_size" model="restaurant.menu.option.type">
            <field name="name">Size</field>
            <field name="code">SIZE</field>
            <field name="selection_type">single</field>
            <field name="required">True</field>
            <field name="sequence">1</field>
        </record>
        <record id="option_type_cooking" model="restaurant.menu.option.type">
            <field name="name">Cooking Level</field>
            <field name="code">COOK</field>
            <field name="selection_type">single</field>
            <field name="required">False</field>
            <field name="sequence">2</field>
        </record>
        <record id="option_type_side" model="restaurant.menu.option.type">
            <field name="name">Side Dish</field>
            <field name="code">SIDE</field>
            <field name="selection_type">single</field>
            <field name="required">False</field>
            <field name="sequence">3</field>
        </record>
        <record id="option_type_extras" model="restaurant.menu.option.type">
            <field name="name">Extras</field>
            <field name="code">EXTRA</field>
            <field name="selection_type">multiple</field>
            <field name="required">False</field>
            <field name="max_selections">5</field>
            <field name="sequence">4</field>
        </record>
        <record id="option_type_sauce" model="restaurant.menu.option.type">
            <field name="name">Sauce</field>
            <field name="code">SAUCE</field>
            <field name="selection_type">single</field>
            <field name="required">False</field>
            <field name="sequence">5</field>
        </record>

        <!-- Kitchen Printers -->
        <record id="printer_kitchen" model="restaurant.kitchen.printer">
            <field name="name">Main Kitchen</field>
            <field name="printer_type">kitchen</field>
        </record>
        <record id="printer_bar" model="restaurant.kitchen.printer">
            <field name="name">Bar</field>
            <field name="printer_type">bar</field>
        </record>
        <record id="printer_dessert" model="restaurant.kitchen.printer">
            <field name="name">Dessert Station</field>
            <field name="printer_type">dessert</field>
        </record>

        <!-- Cron Jobs -->
        <record id="ir_cron_reservation_reminders" model="ir.cron">
            <field name="name">Restaurant: Send Reservation Reminders</field>
            <field name="model_id" ref="model_restaurant_reservation"/>
            <field name="state">code</field>
            <field name="code">model._cron_send_reminders()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>

        <record id="ir_cron_mark_no_shows" model="ir.cron">
            <field name="name">Restaurant: Mark No-Shows</field>
            <field name="model_id" ref="model_restaurant_reservation"/>
            <field name="state">code</field>
            <field name="code">model._cron_mark_no_shows()</field>
            <field name="interval_number">30</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>
    </data>
</odoo>
