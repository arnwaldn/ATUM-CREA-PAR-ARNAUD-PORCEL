<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Order Sequence -->
        <record id="seq_restaurant_order" model="ir.sequence">
            <field name="name">Restaurant Order</field>
            <field name="code">restaurant.order</field>
            <field name="prefix">ORD-</field>
            <field name="padding">5</field>
        </record>

        <!-- Reservation Sequence -->
        <record id="seq_restaurant_reservation" model="ir.sequence">
            <field name="name">Restaurant Reservation</field>
            <field name="code">restaurant.reservation</field>
            <field name="prefix">RES-%(year)s</field>
            <field name="padding">4</field>
        </record>
    </data>
</odoo>
