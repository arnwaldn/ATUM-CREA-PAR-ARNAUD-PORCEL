<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Order Form View -->
    <record id="view_restaurant_order_form" model="ir.ui.view">
        <field name="name">restaurant.order.form</field>
        <field name="model">restaurant.order</field>
        <field name="arch" type="xml">
            <form string="Order">
                <header>
                    <button name="action_confirm" type="object" string="Confirm"
                            class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_prepare" type="object" string="Prepare"
                            class="oe_highlight" invisible="state != 'confirmed'"/>
                    <button name="action_ready" type="object" string="Ready"
                            class="oe_highlight" invisible="state != 'preparing'"/>
                    <button name="action_serve" type="object" string="Serve"
                            class="oe_highlight" invisible="state != 'ready'"/>
                    <button name="action_pay" type="object" string="Payment"
                            class="oe_highlight" invisible="state != 'served'"/>
                    <button name="action_paid" type="object" string="Mark Paid"
                            invisible="payment_state != 'paid' or state != 'served'"/>
                    <button name="action_cancel" type="object" string="Cancel"
                            invisible="state in ('paid', 'cancelled')"/>
                    <button name="action_print_ticket" type="object" string="Print Ticket"
                            icon="fa-print" invisible="state == 'draft'"/>
                    <button name="action_print_bill" type="object" string="Print Bill"
                            icon="fa-file-text-o" invisible="state not in ('served', 'paid')"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,confirmed,preparing,ready,served,paid"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_create_invoice" type="object"
                                class="oe_stat_button" icon="fa-file-text-o"
                                invisible="invoice_id or state != 'paid'">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Create Invoice</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group string="Order Details">
                            <field name="order_type"/>
                            <field name="table_id" invisible="order_type != 'dine_in'"/>
                            <field name="customer_count" invisible="order_type != 'dine_in'"/>
                            <field name="waiter_id"/>
                            <field name="order_datetime"/>
                        </group>
                        <group string="Customer" invisible="order_type == 'dine_in'">
                            <field name="partner_id"/>
                            <field name="delivery_address" invisible="order_type != 'delivery'"/>
                            <field name="delivery_time" invisible="order_type != 'delivery'"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Order Lines" name="lines">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="item_id"/>
                                    <field name="quantity"/>
                                    <field name="unit_price"/>
                                    <field name="option_ids" widget="many2many_tags"/>
                                    <field name="modifications"/>
                                    <field name="discount_percent"/>
                                    <field name="subtotal"/>
                                    <field name="kitchen_state" widget="badge"
                                           decoration-info="kitchen_state == 'pending'"
                                           decoration-warning="kitchen_state == 'preparing'"
                                           decoration-success="kitchen_state == 'ready'"/>
                                    <field name="currency_id" column_invisible="1"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer">
                                <field name="subtotal"/>
                                <field name="tax_amount"/>
                                <field name="discount_amount" invisible="not discount_amount"/>
                                <field name="total" class="oe_subtotal_footer_separator"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                        </page>
                        <page string="Discount" name="discount">
                            <group>
                                <group>
                                    <field name="discount_type"/>
                                    <field name="discount_value"/>
                                </group>
                                <group>
                                    <field name="discount_reason"/>
                                </group>
                            </group>
                        </page>
                        <page string="Payments" name="payments" invisible="state not in ('served', 'paid')">
                            <field name="payment_ids">
                                <tree editable="bottom">
                                    <field name="payment_method"/>
                                    <field name="amount"/>
                                    <field name="reference"/>
                                    <field name="change_given"/>
                                    <field name="staff_id"/>
                                    <field name="payment_datetime"/>
                                    <field name="currency_id" column_invisible="1"/>
                                </tree>
                            </field>
                            <group>
                                <group>
                                    <field name="tip_amount"/>
                                </group>
                                <group>
                                    <field name="amount_paid"/>
                                    <field name="amount_due"/>
                                    <field name="payment_state" widget="badge"
                                           decoration-danger="payment_state == 'not_paid'"
                                           decoration-warning="payment_state == 'partial'"
                                           decoration-success="payment_state == 'paid'"/>
                                </group>
                            </group>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="note"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Order Tree View -->
    <record id="view_restaurant_order_tree" model="ir.ui.view">
        <field name="name">restaurant.order.tree</field>
        <field name="model">restaurant.order</field>
        <field name="arch" type="xml">
            <tree string="Orders" decoration-muted="state == 'cancelled'"
                  decoration-success="state == 'paid'">
                <field name="name"/>
                <field name="order_datetime"/>
                <field name="order_type"/>
                <field name="table_id"/>
                <field name="waiter_id"/>
                <field name="total"/>
                <field name="payment_state" widget="badge"
                       decoration-danger="payment_state == 'not_paid'"
                       decoration-warning="payment_state == 'partial'"
                       decoration-success="payment_state == 'paid'"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-primary="state == 'confirmed'"
                       decoration-warning="state in ('preparing', 'ready')"
                       decoration-success="state in ('served', 'paid')"/>
            </tree>
        </field>
    </record>

    <!-- Order Kanban View -->
    <record id="view_restaurant_order_kanban" model="ir.ui.view">
        <field name="name">restaurant.order.kanban</field>
        <field name="model">restaurant.order</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="table_id"/>
                <field name="waiter_id"/>
                <field name="total"/>
                <field name="state"/>
                <field name="order_type"/>
                <progressbar field="state"
                             colors='{"draft": "secondary", "confirmed": "primary",
                                      "preparing": "warning", "ready": "info",
                                      "served": "success", "paid": "success",
                                      "cancelled": "danger"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <span class="badge text-bg-secondary">
                                    <field name="order_type"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <div t-if="record.table_id.raw_value">
                                    <i class="fa fa-cutlery"/> Table <field name="table_id"/>
                                </div>
                                <div><i class="fa fa-user"/> <field name="waiter_id"/></div>
                                <div class="mt-2">
                                    <strong><field name="total" widget="monetary"/></strong>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Order Search View -->
    <record id="view_restaurant_order_search" model="ir.ui.view">
        <field name="name">restaurant.order.search</field>
        <field name="model">restaurant.order</field>
        <field name="arch" type="xml">
            <search string="Search Orders">
                <field name="name"/>
                <field name="table_id"/>
                <field name="waiter_id"/>
                <field name="partner_id"/>
                <separator/>
                <filter name="filter_today" string="Today"
                        domain="[('order_datetime', '>=', time.strftime('%%Y-%%m-%%d 00:00:00')),
                                 ('order_datetime', '&lt;=', time.strftime('%%Y-%%m-%%d 23:59:59'))]"/>
                <separator/>
                <filter name="filter_dine_in" string="Dine In"
                        domain="[('order_type', '=', 'dine_in')]"/>
                <filter name="filter_takeaway" string="Takeaway"
                        domain="[('order_type', '=', 'takeaway')]"/>
                <filter name="filter_delivery" string="Delivery"
                        domain="[('order_type', '=', 'delivery')]"/>
                <separator/>
                <filter name="filter_active" string="Active Orders"
                        domain="[('state', 'not in', ('paid', 'cancelled'))]"/>
                <filter name="filter_unpaid" string="Unpaid"
                        domain="[('payment_state', '!=', 'paid'), ('state', '=', 'served')]"/>
                <group expand="0" string="Group By">
                    <filter name="groupby_table" string="Table"
                            context="{'group_by': 'table_id'}"/>
                    <filter name="groupby_waiter" string="Waiter"
                            context="{'group_by': 'waiter_id'}"/>
                    <filter name="groupby_state" string="Status"
                            context="{'group_by': 'state'}"/>
                    <filter name="groupby_date" string="Date"
                            context="{'group_by': 'order_datetime:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Kitchen Display View (special tree for kitchen) -->
    <record id="view_restaurant_order_kitchen" model="ir.ui.view">
        <field name="name">restaurant.order.kitchen</field>
        <field name="model">restaurant.order</field>
        <field name="arch" type="xml">
            <tree string="Kitchen Orders" create="0" delete="0"
                  decoration-warning="state == 'confirmed'"
                  decoration-info="state == 'preparing'">
                <field name="name"/>
                <field name="table_id"/>
                <field name="confirmed_datetime"/>
                <field name="line_ids" widget="many2many_tags"/>
                <field name="note"/>
                <button name="action_prepare" type="object" string="Start"
                        icon="fa-play" invisible="state != 'confirmed'"/>
                <button name="action_ready" type="object" string="Ready"
                        icon="fa-check" invisible="state != 'preparing'"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_restaurant_order" model="ir.actions.act_window">
        <field name="name">Orders</field>
        <field name="res_model">restaurant.order</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_restaurant_order_search"/>
        <field name="context">{'search_default_filter_today': 1}</field>
    </record>

    <record id="action_restaurant_order_active" model="ir.actions.act_window">
        <field name="name">Active Orders</field>
        <field name="res_model">restaurant.order</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_filter_active': 1}</field>
    </record>

    <record id="action_restaurant_order_kitchen" model="ir.actions.act_window">
        <field name="name">Kitchen Display</field>
        <field name="res_model">restaurant.order</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_restaurant_order_kitchen"/>
        <field name="domain">[('state', 'in', ['confirmed', 'preparing'])]</field>
    </record>
</odoo>
