<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Staff Form View -->
    <record id="view_restaurant_staff_form" model="ir.ui.view">
        <field name="name">restaurant.staff.form</field>
        <field name="model">restaurant.staff</field>
        <field name="arch" type="xml">
            <form string="Staff Member">
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" placeholder="Name"/></h1>
                        <field name="position"/>
                    </div>
                    <group>
                        <group string="Contact">
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="employee_id"/>
                            <field name="user_id"/>
                        </group>
                        <group string="Work">
                            <field name="pin" password="True"/>
                            <field name="hourly_rate"/>
                            <field name="hire_date"/>
                            <field name="is_on_shift"/>
                        </group>
                    </group>
                    <group string="Performance" invisible="not is_on_shift">
                        <group>
                            <field name="order_count"/>
                            <field name="total_sales"/>
                            <field name="avg_tip"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Staff Tree View -->
    <record id="view_restaurant_staff_tree" model="ir.ui.view">
        <field name="name">restaurant.staff.tree</field>
        <field name="model">restaurant.staff</field>
        <field name="arch" type="xml">
            <tree string="Staff">
                <field name="name"/>
                <field name="position"/>
                <field name="phone"/>
                <field name="is_on_shift" widget="boolean"/>
                <field name="order_count"/>
                <field name="total_sales"/>
            </tree>
        </field>
    </record>

    <!-- Staff Kanban View -->
    <record id="view_restaurant_staff_kanban" model="ir.ui.view">
        <field name="name">restaurant.staff.kanban</field>
        <field name="model">restaurant.staff</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="image"/>
                <field name="position"/>
                <field name="is_on_shift"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('restaurant.staff', 'image', record.id.raw_value)"
                                     alt="Staff" class="o_image_64_cover"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div><field name="position"/></div>
                                <div class="mt-1">
                                    <span t-if="record.is_on_shift.raw_value"
                                          class="badge text-bg-success">On Shift</span>
                                    <span t-else="" class="badge text-bg-secondary">Off</span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_restaurant_staff" model="ir.actions.act_window">
        <field name="name">Staff</field>
        <field name="res_model">restaurant.staff</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <!-- Main Menu -->
    <menuitem id="menu_restaurant_root"
              name="Restaurant"
              web_icon="restaurant_pos,static/description/icon.png"
              sequence="50"/>

    <!-- Orders Menu -->
    <menuitem id="menu_restaurant_orders"
              name="Orders"
              parent="menu_restaurant_root"
              sequence="10"/>

    <menuitem id="menu_restaurant_order"
              name="All Orders"
              parent="menu_restaurant_orders"
              action="action_restaurant_order"
              sequence="10"/>

    <menuitem id="menu_restaurant_order_active"
              name="Active Orders"
              parent="menu_restaurant_orders"
              action="action_restaurant_order_active"
              sequence="20"/>

    <menuitem id="menu_restaurant_kitchen"
              name="Kitchen Display"
              parent="menu_restaurant_orders"
              action="action_restaurant_order_kitchen"
              sequence="30"
              groups="group_restaurant_kitchen"/>

    <!-- Tables Menu -->
    <menuitem id="menu_restaurant_tables"
              name="Floor Plan"
              parent="menu_restaurant_root"
              sequence="20"/>

    <menuitem id="menu_restaurant_table"
              name="Tables"
              parent="menu_restaurant_tables"
              action="action_restaurant_table"
              sequence="10"/>

    <menuitem id="menu_restaurant_floor"
              name="Floors"
              parent="menu_restaurant_tables"
              action="action_restaurant_floor"
              sequence="20"
              groups="group_restaurant_manager"/>

    <!-- Reservations Menu -->
    <menuitem id="menu_restaurant_reservations"
              name="Reservations"
              parent="menu_restaurant_root"
              sequence="30"/>

    <menuitem id="menu_restaurant_reservation"
              name="All Reservations"
              parent="menu_restaurant_reservations"
              action="action_restaurant_reservation"
              sequence="10"/>

    <menuitem id="menu_restaurant_reservation_today"
              name="Today"
              parent="menu_restaurant_reservations"
              action="action_restaurant_reservation_today"
              sequence="20"/>

    <!-- Menu Menu -->
    <menuitem id="menu_restaurant_menu"
              name="Menu"
              parent="menu_restaurant_root"
              sequence="40"/>

    <menuitem id="menu_restaurant_menu_item"
              name="Menu Items"
              parent="menu_restaurant_menu"
              action="action_restaurant_menu_item"
              sequence="10"/>

    <menuitem id="menu_restaurant_menu_category"
              name="Categories"
              parent="menu_restaurant_menu"
              action="action_restaurant_menu_category"
              sequence="20"/>

    <!-- Staff Menu -->
    <menuitem id="menu_restaurant_staff"
              name="Staff"
              parent="menu_restaurant_root"
              action="action_restaurant_staff"
              sequence="50"
              groups="group_restaurant_manager"/>

    <!-- Reporting Menu -->
    <menuitem id="menu_restaurant_reporting"
              name="Reporting"
              parent="menu_restaurant_root"
              sequence="60"
              groups="group_restaurant_manager"/>

    <!-- Configuration Menu -->
    <menuitem id="menu_restaurant_configuration"
              name="Configuration"
              parent="menu_restaurant_root"
              sequence="100"
              groups="group_restaurant_manager"/>
</odoo>
