<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Field Service Module Category -->
        <record id="module_fsm_category" model="ir.module.category">
            <field name="name">Field Service</field>
            <field name="description">Field Service Management</field>
            <field name="sequence">50</field>
        </record>

        <!-- Security Groups -->
        <record id="group_fsm_technician" model="res.groups">
            <field name="name">Technician</field>
            <field name="category_id" ref="module_fsm_category"/>
            <field name="comment">Can view and work on assigned interventions</field>
        </record>

        <record id="group_fsm_dispatcher" model="res.groups">
            <field name="name">Dispatcher</field>
            <field name="category_id" ref="module_fsm_category"/>
            <field name="implied_ids" eval="[(4, ref('group_fsm_technician'))]"/>
            <field name="comment">Can create and assign interventions</field>
        </record>

        <record id="group_fsm_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_fsm_category"/>
            <field name="implied_ids" eval="[(4, ref('group_fsm_dispatcher'))]"/>
            <field name="comment">Full access including contracts and configuration</field>
        </record>

        <!-- Record Rules -->

        <!-- Technicians see only their assigned interventions -->
        <record id="rule_intervention_technician" model="ir.rule">
            <field name="name">Intervention: Technician sees own</field>
            <field name="model_id" ref="model_fsm_intervention"/>
            <field name="domain_force">[('technician_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_fsm_technician'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Dispatchers see all interventions -->
        <record id="rule_intervention_dispatcher" model="ir.rule">
            <field name="name">Intervention: Dispatcher sees all</field>
            <field name="model_id" ref="model_fsm_intervention"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_fsm_dispatcher'))]"/>
        </record>

        <!-- Contracts only for managers -->
        <record id="rule_contract_manager" model="ir.rule">
            <field name="name">Contract: Manager only</field>
            <field name="model_id" ref="model_fsm_contract"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_fsm_manager'))]"/>
        </record>
    </data>
</odoo>
