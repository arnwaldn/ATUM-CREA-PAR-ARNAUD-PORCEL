<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Equipment Sequence -->
        <record id="seq_fsm_equipment" model="ir.sequence">
            <field name="name">Field Service Equipment</field>
            <field name="code">fsm.equipment</field>
            <field name="prefix">EQP-</field>
            <field name="padding">5</field>
        </record>

        <!-- Intervention Sequence -->
        <record id="seq_fsm_intervention" model="ir.sequence">
            <field name="name">Field Service Intervention</field>
            <field name="code">fsm.intervention</field>
            <field name="prefix">INT-%(year)s-</field>
            <field name="padding">5</field>
        </record>

        <!-- Contract Sequence -->
        <record id="seq_fsm_contract" model="ir.sequence">
            <field name="name">Field Service Contract</field>
            <field name="code">fsm.contract</field>
            <field name="prefix">CTR-%(year)s-</field>
            <field name="padding">4</field>
        </record>
    </data>
</odoo>
