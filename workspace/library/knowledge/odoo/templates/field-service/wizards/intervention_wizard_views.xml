<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Schedule Wizard Form -->
    <record id="view_fsm_intervention_schedule_wizard_form" model="ir.ui.view">
        <field name="name">fsm.intervention.schedule.wizard.form</field>
        <field name="model">fsm.intervention.schedule.wizard</field>
        <field name="arch" type="xml">
            <form string="Schedule Intervention">
                <group>
                    <field name="intervention_id" readonly="1"/>
                    <field name="scheduled_date"/>
                    <field name="duration_planned" widget="float_time"/>
                    <field name="technician_id"/>
                    <field name="send_notification"/>
                </group>
                <group string="Notes">
                    <field name="notes" nolabel="1"/>
                </group>
                <footer>
                    <button name="action_schedule" type="object"
                            string="Schedule" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_fsm_intervention_schedule_wizard" model="ir.actions.act_window">
        <field name="name">Schedule Intervention</field>
        <field name="res_model">fsm.intervention.schedule.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Complete Wizard Form -->
    <record id="view_fsm_intervention_complete_wizard_form" model="ir.ui.view">
        <field name="name">fsm.intervention.complete.wizard.form</field>
        <field name="model">fsm.intervention.complete.wizard</field>
        <field name="arch" type="xml">
            <form string="Complete Intervention">
                <group>
                    <field name="intervention_id" readonly="1"/>
                    <field name="end_datetime"/>
                </group>
                <group string="Work Performed">
                    <field name="work_done" nolabel="1"/>
                </group>
                <group string="Resolution">
                    <field name="resolution_notes" nolabel="1"/>
                </group>
                <group>
                    <field name="request_signature"/>
                    <field name="request_feedback"/>
                </group>
                <footer>
                    <button name="action_complete" type="object"
                            string="Complete" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_fsm_intervention_complete_wizard" model="ir.actions.act_window">
        <field name="name">Complete Intervention</field>
        <field name="res_model">fsm.intervention.complete.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Mass Assign Wizard Form -->
    <record id="view_fsm_intervention_mass_assign_wizard_form" model="ir.ui.view">
        <field name="name">fsm.intervention.mass.assign.wizard.form</field>
        <field name="model">fsm.intervention.mass.assign.wizard</field>
        <field name="arch" type="xml">
            <form string="Assign Interventions">
                <group>
                    <field name="technician_id"/>
                    <field name="optimize_route"/>
                </group>
                <group string="Interventions to Assign">
                    <field name="intervention_ids" nolabel="1">
                        <tree>
                            <field name="name"/>
                            <field name="scheduled_date"/>
                            <field name="partner_id"/>
                            <field name="intervention_type_id"/>
                        </tree>
                    </field>
                </group>
                <footer>
                    <button name="action_assign" type="object"
                            string="Assign" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_fsm_intervention_mass_assign_wizard" model="ir.actions.act_window">
        <field name="name">Mass Assign</field>
        <field name="res_model">fsm.intervention.mass.assign.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_fsm_intervention"/>
        <field name="binding_view_types">list</field>
    </record>
</odoo>
