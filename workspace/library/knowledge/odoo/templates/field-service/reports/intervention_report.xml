<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Intervention Report Template -->
    <template id="report_intervention_document">
        <t t-call="web.external_layout">
            <t t-set="doc" t-value="doc"/>
            <div class="page">
                <h2>
                    <span>Service Intervention Report</span>
                </h2>
                <h3>
                    <span t-field="doc.name"/>
                </h3>

                <div class="row mt-4">
                    <div class="col-6">
                        <strong>Customer:</strong>
                        <address t-field="doc.partner_id"
                                 t-options='{"widget": "contact", "fields": ["address", "name", "phone", "email"]}'/>
                    </div>
                    <div class="col-6">
                        <table class="table table-sm table-borderless">
                            <tr>
                                <td><strong>Intervention Type:</strong></td>
                                <td><span t-field="doc.intervention_type_id"/></td>
                            </tr>
                            <tr>
                                <td><strong>Equipment:</strong></td>
                                <td><span t-field="doc.equipment_id"/></td>
                            </tr>
                            <tr>
                                <td><strong>Contract:</strong></td>
                                <td><span t-field="doc.contract_id"/></td>
                            </tr>
                            <tr>
                                <td><strong>Technician:</strong></td>
                                <td><span t-field="doc.technician_id"/></td>
                            </tr>
                        </table>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-6">
                        <strong>Intervention Location:</strong>
                        <p>
                            <span t-field="doc.location_street"/><br/>
                            <span t-field="doc.location_zip"/> <span t-field="doc.location_city"/>
                        </p>
                        <t t-if="doc.location_notes">
                            <strong>Access Notes:</strong>
                            <p t-field="doc.location_notes"/>
                        </t>
                    </div>
                    <div class="col-6">
                        <table class="table table-sm table-borderless">
                            <tr>
                                <td><strong>Scheduled Date:</strong></td>
                                <td><span t-field="doc.scheduled_date" t-options='{"widget": "datetime"}'/></td>
                            </tr>
                            <tr t-if="doc.start_datetime">
                                <td><strong>Started:</strong></td>
                                <td><span t-field="doc.start_datetime" t-options='{"widget": "datetime"}'/></td>
                            </tr>
                            <tr t-if="doc.end_datetime">
                                <td><strong>Completed:</strong></td>
                                <td><span t-field="doc.end_datetime" t-options='{"widget": "datetime"}'/></td>
                            </tr>
                            <tr t-if="doc.actual_duration">
                                <td><strong>Duration:</strong></td>
                                <td><span t-field="doc.actual_duration" t-options='{"widget": "float_time"}'/></td>
                            </tr>
                        </table>
                    </div>
                </div>

                <div class="mt-4" t-if="doc.description">
                    <strong>Problem Description:</strong>
                    <p t-field="doc.description"/>
                </div>

                <div class="mt-4" t-if="doc.work_done">
                    <strong>Work Performed:</strong>
                    <p t-field="doc.work_done"/>
                </div>

                <div class="mt-4" t-if="doc.resolution_notes">
                    <strong>Resolution Notes:</strong>
                    <p t-field="doc.resolution_notes"/>
                </div>

                <!-- Parts Used -->
                <t t-if="doc.part_ids">
                    <h4 class="mt-4">Parts Used</h4>
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th class="text-end">Quantity</th>
                                <th class="text-end">Unit Price</th>
                                <th class="text-end">Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="doc.part_ids" t-as="part">
                                <tr>
                                    <td><span t-field="part.product_id"/></td>
                                    <td class="text-end"><span t-field="part.quantity"/></td>
                                    <td class="text-end"><span t-field="part.unit_price"/></td>
                                    <td class="text-end"><span t-field="part.subtotal"/></td>
                                </tr>
                            </t>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="3" class="text-end"><strong>Parts Total:</strong></td>
                                <td class="text-end"><strong><span t-field="doc.parts_total"/></strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </t>

                <!-- Time Entries -->
                <t t-if="doc.time_ids">
                    <h4 class="mt-4">Labor</h4>
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Technician</th>
                                <th>Description</th>
                                <th class="text-end">Hours</th>
                                <th class="text-end">Rate</th>
                                <th class="text-end">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="doc.time_ids" t-as="time">
                                <tr>
                                    <td><span t-field="time.date"/></td>
                                    <td><span t-field="time.technician_id"/></td>
                                    <td><span t-field="time.description"/></td>
                                    <td class="text-end"><span t-field="time.duration" t-options='{"widget": "float_time"}'/></td>
                                    <td class="text-end"><span t-field="time.hourly_rate"/></td>
                                    <td class="text-end"><span t-field="time.amount"/></td>
                                </tr>
                            </t>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="5" class="text-end"><strong>Labor Total:</strong></td>
                                <td class="text-end"><strong><span t-field="doc.labor_total"/></strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </t>

                <!-- Totals -->
                <div class="row mt-4" t-if="doc.billable">
                    <div class="col-6 offset-6">
                        <table class="table table-sm">
                            <tr>
                                <td><strong>Parts:</strong></td>
                                <td class="text-end"><span t-field="doc.parts_total"/></td>
                            </tr>
                            <tr>
                                <td><strong>Labor:</strong></td>
                                <td class="text-end"><span t-field="doc.labor_total"/></td>
                            </tr>
                            <tr class="border-top">
                                <td><strong>Total:</strong></td>
                                <td class="text-end"><strong><span t-field="doc.total_amount"/></strong></td>
                            </tr>
                        </table>
                    </div>
                </div>

                <!-- Signatures -->
                <div class="row mt-5" t-if="doc.state == 'done'">
                    <div class="col-6 text-center">
                        <t t-if="doc.technician_signature">
                            <img t-att-src="'data:image/png;base64,' + doc.technician_signature.decode('utf-8')"
                                 style="max-height: 100px;"/>
                        </t>
                        <div class="border-top mt-2 pt-1">
                            <strong>Technician Signature</strong><br/>
                            <span t-field="doc.technician_id"/>
                        </div>
                    </div>
                    <div class="col-6 text-center">
                        <t t-if="doc.customer_signature">
                            <img t-att-src="'data:image/png;base64,' + doc.customer_signature.decode('utf-8')"
                                 style="max-height: 100px;"/>
                        </t>
                        <div class="border-top mt-2 pt-1">
                            <strong>Customer Signature</strong><br/>
                            <span t-field="doc.contact_name"/>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="report_intervention">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="field_service.report_intervention_document"/>
            </t>
        </t>
    </template>

    <!-- Report Action -->
    <record id="action_report_intervention" model="ir.actions.report">
        <field name="name">Intervention Report</field>
        <field name="model">fsm.intervention</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">field_service.report_intervention</field>
        <field name="report_file">field_service.report_intervention</field>
        <field name="print_report_name">'Intervention - %s' % (object.name)</field>
        <field name="binding_model_id" ref="model_fsm_intervention"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
