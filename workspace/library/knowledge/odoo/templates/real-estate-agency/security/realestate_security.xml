<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Real Estate Module Category -->
        <record id="module_realestate_category" model="ir.module.category">
            <field name="name">Real Estate</field>
            <field name="description">Real Estate Agency Management</field>
            <field name="sequence">50</field>
        </record>

        <!-- Security Groups -->
        <record id="group_realestate_user" model="res.groups">
            <field name="name">Agent</field>
            <field name="category_id" ref="module_realestate_category"/>
            <field name="comment">Can manage properties, visits, and offers</field>
        </record>

        <record id="group_realestate_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_realestate_category"/>
            <field name="implied_ids" eval="[(4, ref('group_realestate_user'))]"/>
            <field name="comment">Full access including configuration and financial data</field>
        </record>

        <!-- Record Rules -->

        <!-- Agents see only their assigned properties -->
        <record id="rule_property_agent" model="ir.rule">
            <field name="name">Property: Agent sees assigned</field>
            <field name="model_id" ref="model_realestate_property"/>
            <field name="domain_force">['|', ('agent_id', '=', user.id), ('agent_id', '=', False)]</field>
            <field name="groups" eval="[(4, ref('group_realestate_user'))]"/>
        </record>

        <!-- Managers see all properties -->
        <record id="rule_property_manager" model="ir.rule">
            <field name="name">Property: Manager sees all</field>
            <field name="model_id" ref="model_realestate_property"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_realestate_manager'))]"/>
        </record>

        <!-- Agents see only their visits -->
        <record id="rule_visit_agent" model="ir.rule">
            <field name="name">Visit: Agent sees own</field>
            <field name="model_id" ref="model_realestate_visit"/>
            <field name="domain_force">[('agent_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_realestate_user'))]"/>
        </record>

        <!-- Agents see only their mandates -->
        <record id="rule_mandate_agent" model="ir.rule">
            <field name="name">Mandate: Agent sees own</field>
            <field name="model_id" ref="model_realestate_mandate"/>
            <field name="domain_force">[('agent_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_realestate_user'))]"/>
        </record>

        <!-- Multi-company rules -->
        <record id="rule_property_company" model="ir.rule">
            <field name="name">Property: Multi-company</field>
            <field name="model_id" ref="model_realestate_property"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>
    </data>
</odoo>
