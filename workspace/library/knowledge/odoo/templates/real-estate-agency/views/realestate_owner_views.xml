<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Owner Form View -->
    <record id="view_realestate_owner_form" model="ir.ui.view">
        <field name="name">realestate.owner.form</field>
        <field name="model">realestate.owner</field>
        <field name="arch" type="xml">
            <form string="Owner">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_properties" type="object"
                                class="oe_stat_button" icon="fa-building">
                            <field name="property_count" widget="statinfo" string="Properties"/>
                        </button>
                    </div>
                    <field name="image_1920" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" placeholder="Owner Name"/></h1>
                    </div>
                    <group>
                        <group string="Contact">
                            <field name="owner_type"/>
                            <field name="phone"/>
                            <field name="mobile"/>
                            <field name="email"/>
                        </group>
                        <group string="Address">
                            <field name="street"/>
                            <field name="city"/>
                            <field name="zip"/>
                            <field name="country_id"/>
                        </group>
                    </group>
                    <group>
                        <group string="Banking">
                            <field name="bank_account"/>
                            <field name="bic"/>
                        </group>
                        <group string="Preferences">
                            <field name="tax_id"/>
                            <field name="preferred_contact"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Properties" name="properties">
                            <field name="property_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="title"/>
                                    <field name="city"/>
                                    <field name="sale_price"/>
                                    <field name="rent_price"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Mandates" name="mandates">
                            <field name="mandate_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="property_id"/>
                                    <field name="mandate_type"/>
                                    <field name="asking_price"/>
                                    <field name="date_end"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Owner Tree View -->
    <record id="view_realestate_owner_tree" model="ir.ui.view">
        <field name="name">realestate.owner.tree</field>
        <field name="model">realestate.owner</field>
        <field name="arch" type="xml">
            <tree string="Owners">
                <field name="name"/>
                <field name="owner_type"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="city"/>
                <field name="property_count"/>
                <field name="mandate_count"/>
            </tree>
        </field>
    </record>

    <!-- Owner Search View -->
    <record id="view_realestate_owner_search" model="ir.ui.view">
        <field name="name">realestate.owner.search</field>
        <field name="model">realestate.owner</field>
        <field name="arch" type="xml">
            <search string="Search Owners">
                <field name="name"/>
                <field name="phone"/>
                <field name="email"/>
                <separator/>
                <filter name="filter_individual" string="Individuals"
                        domain="[('owner_type', '=', 'individual')]"/>
                <filter name="filter_company" string="Companies"
                        domain="[('owner_type', '=', 'company')]"/>
                <group expand="0" string="Group By">
                    <filter name="groupby_type" string="Type"
                            context="{'group_by': 'owner_type'}"/>
                    <filter name="groupby_city" string="City"
                            context="{'group_by': 'city'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Owner Action -->
    <record id="action_realestate_owner" model="ir.actions.act_window">
        <field name="name">Owners</field>
        <field name="res_model">realestate.owner</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_realestate_owner_search"/>
    </record>
</odoo>
