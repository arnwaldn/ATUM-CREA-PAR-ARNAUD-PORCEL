<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Property Form View -->
    <record id="view_realestate_property_form" model="ir.ui.view">
        <field name="name">realestate.property.form</field>
        <field name="model">realestate.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <header>
                    <button name="action_publish" type="object" string="Publish"
                            class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_set_option" type="object" string="Set Option"
                            invisible="state != 'available'"/>
                    <button name="action_mark_sold" type="object" string="Mark Sold"
                            invisible="state not in ('available', 'option')"/>
                    <button name="action_mark_rented" type="object" string="Mark Rented"
                            invisible="state not in ('available', 'option')"/>
                    <button name="action_withdraw" type="object" string="Withdraw"
                            invisible="state not in ('available', 'option')"/>
                    <button name="action_schedule_visit" type="object" string="Schedule Visit"
                            invisible="state != 'available'"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,available,option,sold"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_visits" type="object"
                                class="oe_stat_button" icon="fa-calendar">
                            <field name="visit_count" widget="statinfo" string="Visits"/>
                        </button>
                        <button name="action_view_offers" type="object"
                                class="oe_stat_button" icon="fa-euro">
                            <field name="offer_count" widget="statinfo" string="Offers"/>
                        </button>
                    </div>
                    <field name="image_main" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                        <label for="title"/>
                        <h2>
                            <field name="title" placeholder="Property Title"/>
                        </h2>
                    </div>
                    <group>
                        <group string="Classification">
                            <field name="property_type"/>
                            <field name="transaction_type"/>
                            <field name="condition"/>
                        </group>
                        <group string="Pricing">
                            <field name="sale_price" invisible="transaction_type == 'rent'"/>
                            <field name="rent_price" invisible="transaction_type == 'sale'"/>
                            <field name="charges"/>
                            <field name="price_per_sqm"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Details" name="details">
                            <group>
                                <group string="Areas">
                                    <field name="living_area"/>
                                    <field name="total_area"/>
                                    <field name="land_area"/>
                                </group>
                                <group string="Layout">
                                    <field name="rooms"/>
                                    <field name="bedrooms"/>
                                    <field name="bathrooms"/>
                                    <field name="floor"/>
                                    <field name="total_floors"/>
                                </group>
                            </group>
                            <group string="Features">
                                <group>
                                    <field name="furnished"/>
                                    <field name="parking_spaces"/>
                                    <field name="garage"/>
                                    <field name="elevator"/>
                                    <field name="cellar"/>
                                </group>
                                <group>
                                    <field name="garden"/>
                                    <field name="garden_area" invisible="not garden"/>
                                    <field name="terrace"/>
                                    <field name="terrace_area" invisible="not terrace"/>
                                    <field name="balcony"/>
                                    <field name="swimming_pool"/>
                                    <field name="disabled_access"/>
                                </group>
                            </group>
                        </page>
                        <page string="Location" name="location">
                            <group>
                                <group>
                                    <field name="street"/>
                                    <field name="street2"/>
                                    <field name="zip_code"/>
                                    <field name="city"/>
                                    <field name="state_id"/>
                                    <field name="country_id"/>
                                </group>
                                <group>
                                    <field name="latitude"/>
                                    <field name="longitude"/>
                                </group>
                            </group>
                        </page>
                        <page string="Energy" name="energy">
                            <group>
                                <group string="Heating">
                                    <field name="heating_type"/>
                                    <field name="hot_water"/>
                                </group>
                                <group string="Energy Performance (DPE)">
                                    <field name="energy_class"/>
                                    <field name="energy_value"/>
                                    <field name="ghg_class"/>
                                    <field name="ghg_value"/>
                                </group>
                            </group>
                        </page>
                        <page string="Images" name="images">
                            <field name="image_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="image" widget="image" options="{'size': [100, 100]}"/>
                                    <field name="name"/>
                                    <field name="is_main"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Owner & Agent" name="management">
                            <group>
                                <group>
                                    <field name="owner_id"/>
                                    <field name="agent_id"/>
                                </group>
                                <group>
                                    <field name="construction_year"/>
                                    <field name="renovation_year"/>
                                    <field name="available_from"/>
                                </group>
                            </group>
                        </page>
                        <page string="Description" name="description">
                            <field name="description"/>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Property Tree View -->
    <record id="view_realestate_property_tree" model="ir.ui.view">
        <field name="name">realestate.property.tree</field>
        <field name="model">realestate.property</field>
        <field name="arch" type="xml">
            <tree string="Properties" decoration-success="state == 'available'"
                  decoration-warning="state == 'option'"
                  decoration-muted="state in ('sold', 'rented', 'withdrawn')">
                <field name="name"/>
                <field name="title"/>
                <field name="property_type"/>
                <field name="city"/>
                <field name="living_area"/>
                <field name="rooms"/>
                <field name="bedrooms"/>
                <field name="sale_price" sum="Total"/>
                <field name="rent_price"/>
                <field name="energy_class"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-success="state == 'available'"
                       decoration-warning="state == 'option'"
                       decoration-primary="state in ('sold', 'rented')"/>
            </tree>
        </field>
    </record>

    <!-- Property Kanban View -->
    <record id="view_realestate_property_kanban" model="ir.ui.view">
        <field name="name">realestate.property.kanban</field>
        <field name="model">realestate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="title"/>
                <field name="property_type"/>
                <field name="city"/>
                <field name="sale_price"/>
                <field name="rent_price"/>
                <field name="living_area"/>
                <field name="rooms"/>
                <field name="image_main"/>
                <field name="transaction_type"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('realestate.property', 'image_main', record.id.raw_value)"
                                     alt="Property" class="o_image_128_cover"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="title"/>
                                </strong>
                                <div class="o_kanban_record_subtitle">
                                    <field name="name"/> - <field name="property_type"/>
                                </div>
                                <div>
                                    <i class="fa fa-map-marker"/> <field name="city"/>
                                </div>
                                <div>
                                    <span t-if="record.transaction_type.raw_value != 'rent'">
                                        <strong><field name="sale_price" widget="monetary"/></strong>
                                    </span>
                                    <span t-if="record.transaction_type.raw_value != 'sale'">
                                        <field name="rent_price" widget="monetary"/>/month
                                    </span>
                                </div>
                                <div>
                                    <field name="living_area"/>mÂ² |
                                    <field name="rooms"/> rooms
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Property Search View -->
    <record id="view_realestate_property_search" model="ir.ui.view">
        <field name="name">realestate.property.search</field>
        <field name="model">realestate.property</field>
        <field name="arch" type="xml">
            <search string="Search Properties">
                <field name="name"/>
                <field name="title"/>
                <field name="city"/>
                <field name="owner_id"/>
                <separator/>
                <filter name="filter_sale" string="For Sale"
                        domain="[('transaction_type', 'in', ['sale', 'both'])]"/>
                <filter name="filter_rent" string="For Rent"
                        domain="[('transaction_type', 'in', ['rent', 'both'])]"/>
                <separator/>
                <filter name="filter_available" string="Available"
                        domain="[('state', '=', 'available')]"/>
                <filter name="filter_option" string="Under Option"
                        domain="[('state', '=', 'option')]"/>
                <separator/>
                <filter name="filter_apartment" string="Apartments"
                        domain="[('property_type', '=', 'apartment')]"/>
                <filter name="filter_house" string="Houses"
                        domain="[('property_type', '=', 'house')]"/>
                <group expand="0" string="Group By">
                    <filter name="groupby_type" string="Type"
                            context="{'group_by': 'property_type'}"/>
                    <filter name="groupby_city" string="City"
                            context="{'group_by': 'city'}"/>
                    <filter name="groupby_state" string="Status"
                            context="{'group_by': 'state'}"/>
                    <filter name="groupby_agent" string="Agent"
                            context="{'group_by': 'agent_id'}"/>
                    <filter name="groupby_energy" string="Energy Class"
                            context="{'group_by': 'energy_class'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Property Actions -->
    <record id="action_realestate_property" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">realestate.property</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_realestate_property_search"/>
        <field name="context">{'search_default_filter_available': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add your first property
            </p>
        </field>
    </record>

    <record id="action_realestate_property_for_sale" model="ir.actions.act_window">
        <field name="name">For Sale</field>
        <field name="res_model">realestate.property</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('transaction_type', 'in', ['sale', 'both']), ('state', '=', 'available')]</field>
    </record>

    <record id="action_realestate_property_for_rent" model="ir.actions.act_window">
        <field name="name">For Rent</field>
        <field name="res_model">realestate.property</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('transaction_type', 'in', ['rent', 'both']), ('state', '=', 'available')]</field>
    </record>
</odoo>
