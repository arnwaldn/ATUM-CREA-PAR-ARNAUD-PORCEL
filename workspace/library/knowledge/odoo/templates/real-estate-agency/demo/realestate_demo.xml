            <field name="city">Bordeaux</field>
            <field name="zip_code">33000</field>
            <field name="street">8 Rue des Vignes</field>
            <field name="living_area">145</field>
            <field name="land_area">500</field>
            <field name="rooms">6</field>
            <field name="bedrooms">4</field>
            <field name="bathrooms">2</field>
            <field name="construction_year">2015</field>
            <field name="heating_type">heat_pump</field>
            <field name="energy_class">b</field>
            <field name="energy_value">65</field>
            <field name="garden">True</field>
            <field name="garden_area">350</field>
            <field name="garage">True</field>
            <field name="parking_spaces">2</field>
            <field name="condition">excellent</field>
            <field name="owner_id" ref="demo_owner_2"/>
