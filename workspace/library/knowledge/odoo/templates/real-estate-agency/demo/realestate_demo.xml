        </record>

        <record id="demo_property_3" model="realestate.property">
            <field name="title">Studio Near University</field>
            <field name="property_type">studio</field>
            <field name="transaction_type">rent</field>
            <field name="rent_price">650</field>
            <field name="charges">50</field>
            <field name="city">Lyon</field>
            <field name="zip_code">69007</field>
            <field name="street">23 Rue de l'Université</field>
            <field name="living_area">28</field>
