            <field name="transaction_type">sale</field>
            <field name="sale_price">650000</field>
            <field name="city">Paris</field>
            <field name="zip_code">75007</field>
            <field name="street">42 Avenue de Breteuil</field>
            <field name="living_area">85</field>
            <field name="rooms">4</field>
            <field name="bedrooms">2</field>
            <field name="bathrooms">1</field>
            <field name="floor">4</field>
            <field name="total_floors">6</field>
            <field name="construction_year">1920</field>
            <field name="heating_type">individual_gas</field>
            <field name="energy_class">d</field>
            <field name="energy_value">180</field>
            <field name="balcony">True</field>
            <field name="elevator">True</field>
            <field name="cellar">True</field>
