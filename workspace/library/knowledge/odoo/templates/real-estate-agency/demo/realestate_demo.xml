        <!-- Demo Tenant -->
        <record id="demo_tenant_1" model="realestate.tenant">
            <field name="name">Marie Dupont</field>
            <field name="phone">+33 6 12 34 56 78</field>
            <field name="email">marie.dupont@example.com</field>
            <field name="employer">Tech Company SA</field>
            <field name="profession">Software Engineer</field>
            <field name="monthly_income">3500</field>
            <field name="has_id_copy">True</field>
            <field name="has_income_proof">True</field>
        </record>

        <!-- Demo Mandate -->
        <record id="demo_mandate_1" model="realestate.mandate">
            <field name="property_id" ref="demo_property_1"/>
            <field name="owner_id" ref="demo_owner_1"/>
            <field name="mandate_type">exclusive</field>
            <field name="transaction_type">sale</field>
            <field name="asking_price">650000</field>
            <field name="minimum_price">620000</field>
            <field name="commission_type">percentage</field>
            <field name="commission_percentage">5.0</field>
            <field name="date_start" eval="(DateTime.now() - timedelta(days=30)).strftime('%Y-%m-%d')"/>
            <field name="duration_months">3</field>
            <field name="date_end" eval="(DateTime.now() + timedelta(days=60)).strftime('%Y-%m-%d')"/>
            <field name="mandate_signed">True</field>
            <field name="publish_online">True</field>
            <field name="state">active</field>
        </record>

        <!-- Demo Visit -->
        <record id="demo_visit_1" model="realestate.visit">
            <field name="property_id" ref="demo_property_1"/>
            <field name="visitor_id" ref="demo_tenant_1.partner_id"/>
            <field name="date" eval="(DateTime.now() + timedelta(days=2)).strftime('%Y-%m-%d')"/>
            <field name="time_start">14.5</field>
            <field name="duration">0.5</field>
            <field name="state">confirmed</field>
        </record>
    </data>
</odoo>
