<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Healthcare Module Category -->
        <record id="module_healthcare_category" model="ir.module.category">
            <field name="name">Healthcare</field>
            <field name="description">Healthcare Clinic Management</field>
            <field name="sequence">50</field>
        </record>

        <!-- Security Groups -->
        <record id="group_healthcare_receptionist" model="res.groups">
            <field name="name">Receptionist</field>
            <field name="category_id" ref="module_healthcare_category"/>
            <field name="comment">Can manage appointments and basic patient info</field>
        </record>

        <record id="group_healthcare_nurse" model="res.groups">
            <field name="name">Nurse</field>
            <field name="category_id" ref="module_healthcare_category"/>
            <field name="implied_ids" eval="[(4, ref('group_healthcare_receptionist'))]"/>
            <field name="comment">Can record vital signs and assist consultations</field>
        </record>

        <record id="group_healthcare_practitioner" model="res.groups">
            <field name="name">Practitioner</field>
            <field name="category_id" ref="module_healthcare_category"/>
            <field name="implied_ids" eval="[(4, ref('group_healthcare_nurse'))]"/>
            <field name="comment">Can conduct consultations and prescribe medications</field>
        </record>

        <record id="group_healthcare_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_healthcare_category"/>
            <field name="implied_ids" eval="[(4, ref('group_healthcare_practitioner'))]"/>
            <field name="comment">Full access to healthcare module including configuration</field>
        </record>

        <!-- Record Rules -->

        <!-- Practitioners can only see their own appointments -->
        <record id="rule_appointment_practitioner" model="ir.rule">
            <field name="name">Appointments: Practitioner sees own</field>
            <field name="model_id" ref="model_healthcare_appointment"/>
            <field name="domain_force">[('practitioner_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_healthcare_practitioner'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Managers see all appointments -->
        <record id="rule_appointment_manager" model="ir.rule">
            <field name="name">Appointments: Manager sees all</field>
            <field name="model_id" ref="model_healthcare_appointment"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_healthcare_manager'))]"/>
        </record>

        <!-- Practitioners can only see their own consultations -->
        <record id="rule_consultation_practitioner" model="ir.rule">
            <field name="name">Consultations: Practitioner sees own</field>
            <field name="model_id" ref="model_healthcare_consultation"/>
            <field name="domain_force">[('practitioner_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_healthcare_practitioner'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Practitioners can only see their own prescriptions -->
        <record id="rule_prescription_practitioner" model="ir.rule">
            <field name="name">Prescriptions: Practitioner sees own</field>
            <field name="model_id" ref="model_healthcare_prescription"/>
            <field name="domain_force">[('practitioner_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_healthcare_practitioner'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Multi-company rules -->
        <record id="rule_patient_company" model="ir.rule">
            <field name="name">Patient: Multi-company</field>
            <field name="model_id" ref="model_healthcare_patient"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

    </data>
</odoo>
