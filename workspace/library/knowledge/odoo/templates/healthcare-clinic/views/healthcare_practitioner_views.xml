<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Practitioner Form View -->
    <record id="view_healthcare_practitioner_form" model="ir.ui.view">
        <field name="name">healthcare.practitioner.form</field>
        <field name="model">healthcare.practitioner</field>
        <field name="arch" type="xml">
            <form string="Practitioner">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_calendar" type="object"
                                class="oe_stat_button" icon="fa-calendar">
                            <span>Calendar</span>
                        </button>
                    </div>
                    <field name="image_1920" widget="image" class="oe_avatar"
                           options='{"preview_image": "image_128"}'/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Dr. Name" required="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Professional Information">
                            <field name="practitioner_type"/>
                            <field name="specialty"/>
                            <field name="registration_number"/>
                            <field name="license_expiry"/>
                        </group>
                        <group string="Account">
                            <field name="user_id"/>
                            <field name="partner_id" invisible="1"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group>
                        <group string="Contact">
                            <field name="phone"/>
                            <field name="mobile"/>
                            <field name="email"/>
                        </group>
                        <group string="Billing">
                            <field name="consultation_fee"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Schedule" name="schedule">
                            <group>
                                <field name="calendar_id"/>
                            </group>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Additional notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Practitioner Tree View -->
    <record id="view_healthcare_practitioner_tree" model="ir.ui.view">
        <field name="name">healthcare.practitioner.tree</field>
        <field name="model">healthcare.practitioner</field>
        <field name="arch" type="xml">
            <tree string="Practitioners">
                <field name="name"/>
                <field name="practitioner_type"/>
                <field name="specialty"/>
                <field name="registration_number"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="consultation_fee"/>
                <field name="active" column_invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Practitioner Kanban View -->
    <record id="view_healthcare_practitioner_kanban" model="ir.ui.view">
        <field name="name">healthcare.practitioner.kanban</field>
        <field name="model">healthcare.practitioner</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="specialty"/>
                <field name="practitioner_type"/>
                <field name="image_128"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('healthcare.practitioner', 'image_128', record.id.raw_value)"
                                     alt="Practitioner" class="o_image_64_cover"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_record_subtitle">
                                    <field name="practitioner_type"/>
                                </div>
                                <div>
                                    <field name="specialty"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Practitioner Search View -->
    <record id="view_healthcare_practitioner_search" model="ir.ui.view">
        <field name="name">healthcare.practitioner.search</field>
        <field name="model">healthcare.practitioner</field>
        <field name="arch" type="xml">
            <search string="Search Practitioners">
                <field name="name"/>
                <field name="specialty"/>
                <field name="registration_number"/>
                <separator/>
                <filter name="filter_doctor" string="Doctors"
                        domain="[('practitioner_type', '=', 'doctor')]"/>
                <filter name="filter_nurse" string="Nurses"
                        domain="[('practitioner_type', '=', 'nurse')]"/>
                <filter name="filter_specialist" string="Specialists"
                        domain="[('practitioner_type', '=', 'specialist')]"/>
                <separator/>
                <filter name="filter_inactive" string="Archived"
                        domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter name="groupby_type" string="Type"
                            context="{'group_by': 'practitioner_type'}"/>
                    <filter name="groupby_specialty" string="Specialty"
                            context="{'group_by': 'specialty'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Practitioner Action -->
    <record id="action_healthcare_practitioner" model="ir.actions.act_window">
        <field name="name">Practitioners</field>
        <field name="res_model">healthcare.practitioner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_healthcare_practitioner_search"/>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Register your first practitioner
            </p>
            <p>
                Create practitioner profiles for doctors, nurses, and specialists.
            </p>
        </field>
    </record>
</odoo>
