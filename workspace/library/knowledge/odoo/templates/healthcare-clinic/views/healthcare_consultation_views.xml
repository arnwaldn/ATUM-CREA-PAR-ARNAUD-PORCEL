<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Consultation Form View -->
    <record id="view_healthcare_consultation_form" model="ir.ui.view">
        <field name="name">healthcare.consultation.form</field>
        <field name="model">healthcare.consultation</field>
        <field name="arch" type="xml">
            <form string="Consultation">
                <header>
                    <button name="action_complete" type="object" string="Complete"
                            class="oe_highlight"
                            invisible="state != 'draft'"/>
                    <button name="action_cancel" type="object" string="Cancel"
                            invisible="state != 'draft'"/>
                    <button name="action_create_prescription" type="object"
                            string="Create Prescription"
                            invisible="state != 'draft'"
                            class="oe_highlight"/>
                    <button name="action_create_invoice" type="object"
                            string="Create Invoice"
                            invisible="invoice_status != 'to_invoice'"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_prescriptions" type="object"
                                class="oe_stat_button" icon="fa-medkit"
                                invisible="prescription_count == 0">
                            <field name="prescription_count" widget="statinfo"
                                   string="Prescriptions"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Patient & Practitioner">
                            <field name="patient_id" options='{"no_create": True}'/>
                            <field name="practitioner_id" options='{"no_create": True}'/>
                            <field name="appointment_id"/>
                            <field name="date"/>
                        </group>
                        <group string="Billing">
                            <field name="billable"/>
                            <field name="consultation_fee"
                                   invisible="not billable"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="invoice_id" readonly="1"
                                   invisible="not invoice_id"/>
                            <field name="invoice_status" invisible="not billable"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Chief Complaint" name="complaint">
                            <group>
                                <field name="reason" placeholder="Reason for visit..."/>
                                <field name="chief_complaint" placeholder="Patient's main complaint..."/>
                            </group>
                            <separator string="History of Present Illness"/>
                            <field name="history_present_illness"/>
                        </page>
                        <page string="Vital Signs" name="vitals">
                            <group>
                                <group string="Measurements">
                                    <field name="weight"/>
                                    <field name="height"/>
                                    <field name="bmi"/>
                                    <field name="temperature"/>
                                </group>
                                <group string="Cardiovascular">
                                    <field name="blood_pressure_systolic"/>
                                    <field name="blood_pressure_diastolic"/>
                                    <field name="blood_pressure"/>
                                    <field name="heart_rate"/>
                                </group>
                                <group string="Respiratory">
                                    <field name="respiratory_rate"/>
                                    <field name="oxygen_saturation"/>
                                </group>
                            </group>
                        </page>
                        <page string="Examination" name="examination">
                            <separator string="Physical Examination"/>
                            <field name="physical_examination"/>
                            <separator string="Examination Notes"/>
                            <field name="examination_notes" placeholder="Additional examination notes..."/>
                        </page>
                        <page string="Diagnosis" name="diagnosis">
                            <group>
                                <group>
                                    <field name="diagnosis_ids" widget="many2many_tags"
                                           options="{'color_field': 'category'}"/>
                                </group>
                                <group>
                                    <field name="icd_codes"/>
                                </group>
                            </group>
                            <field name="diagnosis_notes" placeholder="Diagnosis notes and reasoning..."/>
                        </page>
                        <page string="Treatment Plan" name="treatment">
                            <field name="treatment_plan"/>
                        </page>
                        <page string="Follow-up" name="followup">
                            <group>
                                <group>
                                    <field name="follow_up_required"/>
                                    <field name="follow_up_date"
                                           invisible="not follow_up_required"/>
                                </group>
                            </group>
                            <field name="follow_up_notes"
                                   placeholder="Follow-up instructions..."
                                   invisible="not follow_up_required"/>
                            <div invisible="not follow_up_required">
                                <button name="action_schedule_follow_up" type="object"
                                        string="Schedule Follow-up Appointment"
                                        class="btn-primary"/>
                            </div>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Consultation Tree View -->
    <record id="view_healthcare_consultation_tree" model="ir.ui.view">
        <field name="name">healthcare.consultation.tree</field>
        <field name="model">healthcare.consultation</field>
        <field name="arch" type="xml">
            <tree string="Consultations"
                  decoration-muted="state == 'cancelled'"
                  decoration-success="state == 'done'">
                <field name="name"/>
                <field name="date"/>
                <field name="patient_id"/>
                <field name="practitioner_id"/>
                <field name="diagnosis_ids" widget="many2many_tags"/>
                <field name="prescription_count"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-success="state == 'done'"
                       decoration-danger="state == 'cancelled'"/>
                <field name="invoice_status" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Consultation Search View -->
    <record id="view_healthcare_consultation_search" model="ir.ui.view">
        <field name="name">healthcare.consultation.search</field>
        <field name="model">healthcare.consultation</field>
        <field name="arch" type="xml">
            <search string="Search Consultations">
                <field name="name"/>
                <field name="patient_id"/>
                <field name="practitioner_id"/>
                <field name="diagnosis_ids"/>
                <separator/>
                <filter name="filter_today" string="Today"
                        domain="[('date', '&gt;=', time.strftime('%%Y-%%m-%%d 00:00:00')),
                                 ('date', '&lt;=', time.strftime('%%Y-%%m-%%d 23:59:59'))]"/>
                <filter name="filter_week" string="This Week"
                        domain="[('date', '&gt;=', (context_today() - relativedelta(weekday=0)).strftime('%%Y-%%m-%%d'))]"/>
                <separator/>
                <filter name="filter_draft" string="In Progress"
                        domain="[('state', '=', 'draft')]"/>
                <filter name="filter_done" string="Completed"
                        domain="[('state', '=', 'done')]"/>
                <separator/>
                <filter name="filter_to_invoice" string="To Invoice"
                        domain="[('invoice_status', '=', 'to_invoice')]"/>
                <filter name="filter_followup" string="Follow-up Required"
                        domain="[('follow_up_required', '=', True)]"/>
                <group expand="0" string="Group By">
                    <filter name="groupby_patient" string="Patient"
                            context="{'group_by': 'patient_id'}"/>
                    <filter name="groupby_practitioner" string="Practitioner"
                            context="{'group_by': 'practitioner_id'}"/>
                    <filter name="groupby_state" string="Status"
                            context="{'group_by': 'state'}"/>
                    <filter name="groupby_date" string="Date"
                            context="{'group_by': 'date:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Consultation Actions -->
    <record id="action_healthcare_consultation" model="ir.actions.act_window">
        <field name="name">Consultations</field>
        <field name="res_model">healthcare.consultation</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_healthcare_consultation_search"/>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Start your first consultation
            </p>
            <p>
                Record patient consultations including symptoms, diagnosis, and treatment plans.
            </p>
        </field>
    </record>

    <record id="action_healthcare_consultation_today" model="ir.actions.act_window">
        <field name="name">Today's Consultations</field>
        <field name="res_model">healthcare.consultation</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_healthcare_consultation_search"/>
        <field name="context">{'search_default_filter_today': 1}</field>
    </record>
</odoo>
