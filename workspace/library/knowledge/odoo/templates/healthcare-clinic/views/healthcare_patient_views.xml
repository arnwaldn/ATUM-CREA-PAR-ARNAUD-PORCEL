<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Patient Form View -->
    <record id="view_healthcare_patient_form" model="ir.ui.view">
        <field name="name">healthcare.patient.form</field>
        <field name="model">healthcare.patient</field>
        <field name="arch" type="xml">
            <form string="Patient">
                <header>
                    <button name="action_schedule_appointment" type="object"
                            string="Schedule Appointment" class="oe_highlight"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_appointments" type="object"
                                class="oe_stat_button" icon="fa-calendar">
                            <field name="appointment_count" widget="statinfo"
                                   string="Appointments"/>
                        </button>
                        <button name="action_view_consultations" type="object"
                                class="oe_stat_button" icon="fa-stethoscope">
                            <field name="consultation_count" widget="statinfo"
                                   string="Consultations"/>
                        </button>
                        <button name="action_view_prescriptions" type="object"
                                class="oe_stat_button" icon="fa-medkit">
                            <field name="prescription_count" widget="statinfo"
                                   string="Prescriptions"/>
                        </button>
                    </div>
                    <field name="image_1920" widget="image" class="oe_avatar"
                           options='{"preview_image": "image_128"}'/>
                    <div class="oe_title">
                        <label for="patient_id_number"/>
                        <h1>
                            <field name="patient_id_number" readonly="1"/>
                        </h1>
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Patient Name" required="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Personal Information">
                            <field name="birthdate"/>
                            <field name="age"/>
                            <field name="gender"/>
                            <field name="blood_type"/>
                            <field name="national_id"/>
                        </group>
                        <group string="Contact">
                            <field name="phone"/>
                            <field name="mobile"/>
                            <field name="email"/>
                        </group>
                    </group>
                    <group>
                        <group string="Address">
                            <field name="street"/>
                            <field name="street2"/>
                            <field name="city"/>
                            <field name="state_id" options='{"no_create": True}'/>
                            <field name="zip"/>
                            <field name="country_id" options='{"no_create": True}'/>
                        </group>
                        <group string="Administrative">
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="partner_id" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Emergency Contact" name="emergency">
                            <group>
                                <group>
                                    <field name="emergency_contact_name"/>
                                    <field name="emergency_contact_phone"/>
                                    <field name="emergency_contact_relation"/>
                                </group>
                            </group>
                        </page>
                        <page string="Insurance" name="insurance">
                            <group>
                                <group>
                                    <field name="insurance_provider"/>
                                    <field name="insurance_number"/>
                                    <field name="insurance_expiry"/>
                                </group>
                            </group>
                        </page>
                        <page string="Medical History" name="medical">
                            <group>
                                <group string="Allergies">
                                    <field name="allergy_ids" nolabel="1"
                                           widget="many2many_tags"
                                           domain="[('is_allergy', '=', True)]"
                                           context="{'default_is_allergy': True}"/>
                                </group>
                                <group string="Chronic Conditions">
                                    <field name="chronic_condition_ids" nolabel="1"
                                           widget="many2many_tags"
                                           domain="[('is_chronic', '=', True)]"
                                           context="{'default_is_chronic': True}"/>
                                </group>
                            </group>
                            <field name="medical_notes" placeholder="Additional medical notes..."/>
                        </page>
                        <page string="Internal Notes" name="notes">
                            <field name="notes" placeholder="Internal notes about this patient..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Patient Tree View -->
    <record id="view_healthcare_patient_tree" model="ir.ui.view">
        <field name="name">healthcare.patient.tree</field>
        <field name="model">healthcare.patient</field>
        <field name="arch" type="xml">
            <tree string="Patients">
                <field name="patient_id_number"/>
                <field name="name"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="birthdate"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="appointment_count"/>
            </tree>
        </field>
    </record>

    <!-- Patient Kanban View -->
    <record id="view_healthcare_patient_kanban" model="ir.ui.view">
        <field name="name">healthcare.patient.kanban</field>
        <field name="model">healthcare.patient</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="patient_id_number"/>
                <field name="phone"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="image_128"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('healthcare.patient', 'image_128', record.id.raw_value)"
                                     alt="Patient" class="o_image_64_cover"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_record_subtitle">
                                    <field name="patient_id_number"/>
                                </div>
                                <div>
                                    <field name="phone" widget="phone"/>
                                </div>
                                <div>
                                    <span><field name="age"/> years - <field name="gender"/></span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Patient Search View -->
    <record id="view_healthcare_patient_search" model="ir.ui.view">
        <field name="name">healthcare.patient.search</field>
        <field name="model">healthcare.patient</field>
        <field name="arch" type="xml">
            <search string="Search Patients">
                <field name="name"/>
                <field name="patient_id_number"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="national_id"/>
                <separator/>
                <filter name="filter_male" string="Male"
                        domain="[('gender', '=', 'male')]"/>
                <filter name="filter_female" string="Female"
                        domain="[('gender', '=', 'female')]"/>
                <separator/>
                <filter name="filter_allergies" string="Has Allergies"
                        domain="[('allergy_ids', '!=', False)]"/>
                <filter name="filter_chronic" string="Chronic Conditions"
                        domain="[('chronic_condition_ids', '!=', False)]"/>
                <group expand="0" string="Group By">
                    <filter name="groupby_gender" string="Gender"
                            context="{'group_by': 'gender'}"/>
                    <filter name="groupby_blood_type" string="Blood Type"
                            context="{'group_by': 'blood_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Patient Action -->
    <record id="action_healthcare_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">healthcare.patient</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_healthcare_patient_search"/>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Register your first patient
            </p>
            <p>
                Create patient records to manage appointments, consultations, and prescriptions.
            </p>
        </field>
    </record>
</odoo>
