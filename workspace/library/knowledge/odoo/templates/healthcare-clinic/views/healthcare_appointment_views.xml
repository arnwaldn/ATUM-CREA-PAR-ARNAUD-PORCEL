<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Appointment Form View -->
    <record id="view_healthcare_appointment_form" model="ir.ui.view">
        <field name="name">healthcare.appointment.form</field>
        <field name="model">healthcare.appointment</field>
        <field name="arch" type="xml">
            <form string="Appointment">
                <header>
                    <button name="action_confirm" type="object" string="Confirm"
                            class="oe_highlight"
                            invisible="state != 'draft'"/>
                    <button name="action_arrived" type="object" string="Patient Arrived"
                            class="oe_highlight"
                            invisible="state != 'confirmed'"/>
                    <button name="action_start" type="object" string="Start Consultation"
                            class="oe_highlight"
                            invisible="state != 'arrived'"/>
                    <button name="action_done" type="object" string="Complete"
                            invisible="state != 'in_progress'"/>
                    <button name="action_cancel" type="object" string="Cancel"
                            invisible="state in ('done', 'cancelled', 'no_show')"/>
                    <button name="action_no_show" type="object" string="No Show"
                            invisible="state not in ('confirmed', 'arrived')"/>
                    <button name="action_reschedule" type="object" string="Reschedule"
                            invisible="state in ('done', 'cancelled', 'no_show')"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,confirmed,arrived,in_progress,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_consultation" type="object"
                                class="oe_stat_button" icon="fa-stethoscope"
                                invisible="not consultation_id">
                            <span>Consultation</span>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Appointment Details">
                            <field name="patient_id" options='{"no_create": True}'/>
                            <field name="practitioner_id" options='{"no_create": True}'/>
                            <field name="appointment_type"/>
                            <field name="priority" widget="priority"/>
                        </group>
                        <group string="Schedule">
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="duration" widget="float_time"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="reason" placeholder="Reason for appointment..."/>
                        </group>
                        <group>
                            <field name="consultation_id" readonly="1"/>
                            <field name="calendar_event_id" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Additional notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Appointment Tree View -->
    <record id="view_healthcare_appointment_tree" model="ir.ui.view">
        <field name="name">healthcare.appointment.tree</field>
        <field name="model">healthcare.appointment</field>
        <field name="arch" type="xml">
            <tree string="Appointments" decoration-danger="state == 'no_show'"
                  decoration-muted="state == 'cancelled'"
                  decoration-success="state == 'done'"
                  decoration-warning="priority == '1'">
                <field name="name"/>
                <field name="date_start"/>
                <field name="patient_id"/>
                <field name="practitioner_id"/>
                <field name="appointment_type"/>
                <field name="duration" widget="float_time"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-primary="state == 'confirmed'"
                       decoration-warning="state == 'arrived'"
                       decoration-success="state in ('in_progress', 'done')"
                       decoration-danger="state in ('cancelled', 'no_show')"/>
                <field name="priority" column_invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Appointment Calendar View -->
    <record id="view_healthcare_appointment_calendar" model="ir.ui.view">
        <field name="name">healthcare.appointment.calendar</field>
        <field name="model">healthcare.appointment</field>
        <field name="arch" type="xml">
            <calendar string="Appointments" date_start="date_start" date_stop="date_end"
                      color="practitioner_id" mode="week" quick_create="0"
                      event_open_popup="1">
                <field name="patient_id"/>
                <field name="practitioner_id" filters="1"/>
                <field name="appointment_type"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <!-- Appointment Kanban View -->
    <record id="view_healthcare_appointment_kanban" model="ir.ui.view">
        <field name="name">healthcare.appointment.kanban</field>
        <field name="model">healthcare.appointment</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_mobile">
                <field name="name"/>
                <field name="patient_id"/>
                <field name="practitioner_id"/>
                <field name="date_start"/>
                <field name="state"/>
                <field name="priority"/>
                <field name="appointment_type"/>
                <progressbar field="state"
                             colors='{"draft": "secondary", "confirmed": "primary",
                                      "arrived": "warning", "in_progress": "info",
                                      "done": "success", "cancelled": "danger",
                                      "no_show": "danger"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click
                            #{record.priority.raw_value == '1' ? 'oe_kanban_color_3' : ''}">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <field name="priority" widget="priority"/>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>
                                        <i class="fa fa-user"/> <field name="patient_id"/>
                                    </div>
                                    <div>
                                        <i class="fa fa-user-md"/> <field name="practitioner_id"/>
                                    </div>
                                    <div>
                                        <i class="fa fa-clock-o"/> <field name="date_start"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="appointment_type"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Appointment Search View -->
    <record id="view_healthcare_appointment_search" model="ir.ui.view">
        <field name="name">healthcare.appointment.search</field>
        <field name="model">healthcare.appointment</field>
        <field name="arch" type="xml">
            <search string="Search Appointments">
                <field name="name"/>
                <field name="patient_id"/>
                <field name="practitioner_id"/>
                <separator/>
                <filter name="filter_today" string="Today"
                        domain="[('date_start', '&gt;=', time.strftime('%%Y-%%m-%%d 00:00:00')),
                                 ('date_start', '&lt;=', time.strftime('%%Y-%%m-%%d 23:59:59'))]"/>
                <filter name="filter_tomorrow" string="Tomorrow"
                        domain="[('date_start', '&gt;=', (context_today() + relativedelta(days=1)).strftime('%%Y-%%m-%%d 00:00:00')),
                                 ('date_start', '&lt;=', (context_today() + relativedelta(days=1)).strftime('%%Y-%%m-%%d 23:59:59'))]"/>
                <filter name="filter_week" string="This Week"
                        domain="[('date_start', '&gt;=', (context_today() - relativedelta(weekday=0)).strftime('%%Y-%%m-%%d')),
                                 ('date_start', '&lt;', (context_today() + relativedelta(weeks=1, weekday=0)).strftime('%%Y-%%m-%%d'))]"/>
                <separator/>
                <filter name="filter_draft" string="Draft"
                        domain="[('state', '=', 'draft')]"/>
                <filter name="filter_confirmed" string="Confirmed"
                        domain="[('state', '=', 'confirmed')]"/>
                <filter name="filter_arrived" string="Arrived"
                        domain="[('state', '=', 'arrived')]"/>
                <separator/>
                <filter name="filter_urgent" string="Urgent"
                        domain="[('priority', '=', '1')]"/>
                <group expand="0" string="Group By">
                    <filter name="groupby_patient" string="Patient"
                            context="{'group_by': 'patient_id'}"/>
                    <filter name="groupby_practitioner" string="Practitioner"
                            context="{'group_by': 'practitioner_id'}"/>
                    <filter name="groupby_type" string="Type"
                            context="{'group_by': 'appointment_type'}"/>
                    <filter name="groupby_state" string="Status"
                            context="{'group_by': 'state'}"/>
                    <filter name="groupby_date" string="Date"
                            context="{'group_by': 'date_start:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Appointment Actions -->
    <record id="action_healthcare_appointment" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="res_model">healthcare.appointment</field>
        <field name="view_mode">calendar,kanban,tree,form</field>
        <field name="search_view_id" ref="view_healthcare_appointment_search"/>
        <field name="context">{'search_default_filter_today': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Schedule your first appointment
            </p>
            <p>
                Create appointments for patients with available practitioners.
            </p>
        </field>
    </record>

    <record id="action_healthcare_appointment_today" model="ir.actions.act_window">
        <field name="name">Today's Appointments</field>
        <field name="res_model">healthcare.appointment</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_healthcare_appointment_search"/>
        <field name="context">{'search_default_filter_today': 1}</field>
    </record>
</odoo>
